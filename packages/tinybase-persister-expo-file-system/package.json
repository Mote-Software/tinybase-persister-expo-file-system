{
  "name": "@mote-software/tinybase-persister-expo-file-system",
  "version": "0.0.0",
  "private": false,
  "description": "TinyBase persister for Expo FileSystem",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "ava",
    "type": "tsc --noEmit"
  },
  "keywords": [
    "tinybase",
    "persister",
    "expo",
    "file-system",
    "react-native",
    "storage",
    "persistence",
    "local-storage"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mote-Software/tinybase-persister-expo-file-system.git",
    "directory": "packages/tinybase-persister-expo-file-system"
  },
  "bugs": {
    "url": "https://github.com/Mote-Software/tinybase-persister-expo-file-system/issues"
  },
  "homepage": "https://github.com/Mote-Software/tinybase-persister-expo-file-system#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "expo-file-system": "^19.0.17",
    "tinybase": "^6.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "^22.0.0",
    "ava": "^6.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "optionalPeerDependencies": {
    "react-native": ">=0.70.0"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": ["--import=tsx", "--no-warnings"],
    "files": [
      "src/**/*.spec.ts",
      "src/**/*.spec.tsx",
      "!src/**/*-helpers.ts",
      "!src/**/test-helpers.ts"
    ],
    "workerThreads": false,
    "serial": true,
    "environmentVariables": {
      "NODE_ENV": "test"
    }
  }
}
